@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div class="card-deck">
    @foreach (var product in Model.Products)
    {
        
    <div class="card">
        <a asp-page="Product" asp-route-ID="@product.Id" title="">
            <div class="card-body">
                <h3 class="card-text">@product.Name</h3>
            </div>
            @if (product.Rating.HasValue)
            {
                <p class="card-text">Ratings: @product.Rating / 10</p>
            }
            else
            {
                <p class="card-text">Ratings: N/A</p>
            }
            <img class="card-img-top" src="@product.Image" alt="@product.Name" style="height:100%">
        </a>
    </div>
    }
</div>
