@page
@model PetProject.Pages.ProductModel
@{
}
<div class="card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-text">@Model.Product.Name</h2>
        </div>
        @if (Model.Product.Rating.HasValue)
        {
            <p class="card-text">Ratings: @Model.Product.Rating / 10</p>
        }
        else
        {
            <p class="card-text">Ratings: N/A</p>
        }
        <img class="card-img-top" src="@Model.Product.Image" alt="@Model.Product.Name" style="height:100%">
        @foreach (var review in Model.Reviews)
        {
            <div class="card">
                <h3 class="card-header">@review.CustomerName</h3>
                <h2 class="card-text">@review.Rating / 10</h2>
                <div class="card-text">@review.Comment</div>
            </div>
        }
    </div>
</div>